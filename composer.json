{
    "name": "vendor_name/plugin_slug",
    "description": "plugin_description",
    "keywords": [
        "vendor_name",
        "plugin_slug"
    ],
    "homepage": "https://github.com/vendor_name/plugin_slug",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "author_name",
            "email": "email@domain.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "alleyinteractive/composer-wordpress-autoloader": "^0.6"
    },
    "require-dev": {
        "alleyinteractive/alley-coding-standards": "^0.3",
        "mantle-framework/testkit": "^0.5",
        "nunomaduro/collision": "^5.0"
    },
    "config": {
        "allow-plugins": {
            "alleyinteractive/composer-wordpress-autoloader": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "extra": {
        "wordpress-autoloader": {
            "autoload": {
                "Vendor_Name\\Skeleton\\": "src"
            },
            "autoload-dev": {
                "Vendor_Name\\Skeleton\\Tests\\": "tests"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpcbf": "phpcbf .",
        "phpcs": "phpcs .",
        "phpunit": "phpunit",
        "test": [
            "@phpcs",
            "@phpunit"
        ]
    }
}
